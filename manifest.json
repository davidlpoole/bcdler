{
  "manifest_version": 2,
  "name": "Bandcamp Downloader",
  "version": "1.0",

  "description": "Automatically downloads files from a specific website when they start playing.",

  "icons": {
    "48": "icons/border-48.png"
  },

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "downloads",
    "<all_urls>"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["https://merkabamusic1.bandcamp.com/*"],
      "js": ["content.js"]
    }
  ],

  "browser_action": {
    "default_popup": "popup.html"
  }
}